    <!-- key templates -->
    <ControlTemplate x:Key="WhiteKeyTemplate" TargetType="controls:Key">
        <Grid>
            <Rectangle StrokeThickness="4" Stroke="Black" Margin="-4,0,0,0" >
                <Rectangle.Fill>
                    <SolidColorBrush x:Name="brush" Color="White" />
                </Rectangle.Fill>
            </Rectangle>

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="brush"
                                            Storyboard.TargetProperty="Color"
                                            To="White"
                                            Duration="0:0:.3" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="brush" 
                                                          Storyboard.TargetProperty="Color">
                                <DiscreteColorKeyFrame KeyTime="0" Value="{ThemeResource SystemAccentColor}" />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="BlackKeyTemplate" TargetType="controls:Key">
        <Grid>
            <Rectangle StrokeThickness="4" Stroke="Black">
                <Rectangle.Fill>
                    <SolidColorBrush x:Name="brush" Color="Black" />
