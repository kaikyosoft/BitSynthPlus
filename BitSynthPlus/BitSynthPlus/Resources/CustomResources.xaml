                                                              Storyboard.TargetProperty="Color">
                                <DiscreteColorKeyFrame KeyTime="0" Value="{ThemeResource SystemAccentColor}" />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>


